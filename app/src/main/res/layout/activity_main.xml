        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registros de temperatura"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtTemperaturaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:hint="Seleccione hora y fecha de inicio"
            android:onClick="tempInicioClick" />

        <EditText
            android:id="@+id/txtTemperaturaFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:hint="Seleccione hora y fecha de final"
            android:onClick="tempFinalClick" />

        <Button
            android:id="@+id/btnTemperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver registros" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registros de luminosidad"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtLuminosidadInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Seleccione hora y fecha de inicio"
            android:inputType="date"
            android:onClick="lumInicioClick" />

        <EditText
            android:id="@+id/txtLuminosidadFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="Seleccione hora y fecha de final"
            android:inputType="date"
            android:onClick="lumFinalClick" />

        <Button
            android:id="@+id/btnLuminosidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver registros" />

